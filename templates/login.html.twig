{% extends "base.html.twig" %}
{% block title %}Connexion - Croissantage{% endblock %}
{% block body %}
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="/images/logo.svg">
                </div>
                <h4>Bienvenue sur Croissantage !</h4>
                <h6 class="font-weight-light">Merci de vous connecter pour continuer.</h6>
                <form class="pt-3">
                  <div class="form-group">
                    <input type="text" class="form-control form-control-lg" id="login" placeholder="Login">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" id="password" placeholder="Mot de passe">
                  </div>
                  <div class="mt-3 text-center">
                    <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="#">CONNEXION</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}